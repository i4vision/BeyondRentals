# Database Configuration
DATABASE_URL=postgresql://checkin_user:checkin_password@localhost:5432/checkin_db

# Object Storage Configuration
# Use 'gcs' for Replit/Google Cloud Storage or 'minio' for containerized deployment
STORAGE_TYPE=gcs

# Google Cloud Storage (for Replit development)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your-bucket-id-here
PRIVATE_OBJECT_DIR=/your-bucket-name/private
PUBLIC_OBJECT_SEARCH_PATHS=/your-bucket-name/public

# MinIO S3-Compatible Storage (for Docker/container deployment)
MINIO_ENDPOINT=minio:9000
MINIO_PUBLIC_ENDPOINT=localhost:5001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=checkin-uploads
MINIO_USE_SSL=false

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Application Configuration
NODE_ENV=production
PORT=5000

# Optional: Redis Configuration (if using Redis for sessions)
# REDIS_URL=redis://localhost:6379