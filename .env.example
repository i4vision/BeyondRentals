# Database Configuration
DATABASE_URL=postgresql://checkin_user:checkin_password@localhost:5432/checkin_db

# Object Storage Configuration
# Use 'gcs' for Replit/Google Cloud Storage or 'minio' for containerized deployment
STORAGE_TYPE=gcs

# Google Cloud Storage (for Replit development)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your-bucket-id-here
PRIVATE_OBJECT_DIR=/your-bucket-name/private
PUBLIC_OBJECT_SEARCH_PATHS=/your-bucket-name/public

# MinIO S3-Compatible Storage (for Docker/container deployment)
MINIO_ENDPOINT=minio:9000
# Public endpoint that external users will use to download files
# Use your domain:port (e.g., byr.i4vision.us:5001) for external access
# Use localhost:5001 only for local-only testing
MINIO_PUBLIC_ENDPOINT=minio.i4vision.us
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=checkin-uploads
MINIO_USE_SSL=false

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Pre-fill Token Security
# Required for generating secure pre-filled form URLs
# Generate a strong random secret: openssl rand -base64 32
TOKEN_SECRET=your-token-signing-secret-generate-with-openssl-rand

# Public URL for pre-fill links
# This is the public-facing URL users will use to access the form
# Default: uses the request URL if not set
PUBLIC_URL=https://your-domain.com

# Webhook URL for form submissions (optional)
# Azure Logic Apps, Zapier, Make.com, or any webhook endpoint
# If not set, webhook submission will be skipped
VITE_WEBHOOK_URL=https://prod-03.westus.logic.azure.com:443/workflows/your-workflow-id/triggers/manual/paths/invoke?api-version=2016-06-01&sp=%2Ftriggers%2Fmanual%2Frun&sv=1.0&sig=your-signature

# Application Configuration
NODE_ENV=production
PORT=5000

# Optional: Redis Configuration (if using Redis for sessions)
# REDIS_URL=redis://localhost:6379